    background:#222222;
    color:#ffffff;
}
#form >div{
    display: block;
    overflow: hidden;
}
#form_datetimeFrom, #form_datetimeTo, #form label{
    float:left;
}
.closer{
    display:block;
    float:left;
    margin:0 5px;
    cursor:pointer;
    color:#444444;
    clear:right;
